<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/cross_id"
        android:layout_centerVertical="true"
        android:layout_margin="7dp"
        android:src="@drawable/ic_highlight_off_red_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:background="@drawable/border_drawable"
        android:layout_toLeftOf="@+id/cross_id"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/charge_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Charge"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/balance_et"
            android:layout_width="60dp"
            android:inputType="numberDecimal"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/charge_button"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/payment_options"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/select_arrow"
            android:src="@drawable/ic_arrow_down_dark_24dp"
            android:layout_toRightOf="@+id/payment_options"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>