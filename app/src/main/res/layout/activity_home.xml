<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.safeway.postest.Home">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/scanGoIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/header_background4"
        app:strokeColor="@null"
        app:shapeAppearanceOverlay="@style/roundedImageViewTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shapeAppearanceOverlay="@style/roundedImageViewBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanGoIv"
        >
        <TextView
            android:id="@+id/tv_welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="64dp"
            android:text="Welcome, Associate "
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            app:fontFamily="Roboto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scanGoIv" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_store_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanGoIv">

        <TextView
            android:id="@+id/tv_storeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusedByDefault="true"
            android:text="Store "
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="Roboto" />

        <EditText
            android:id="@+id/et_storeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusedByDefault="false"
            android:hint="#"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="Roboto" />
    </LinearLayout>



    <FrameLayout
        android:id="@+id/fl_club_card_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_store_info"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_manualEntryTitle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter customers clubcard or phone number."
            android:layout_marginStart="30dp"
            android:layout_marginEnd="6dp"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold|italic"/>

        <ImageView
            android:id="@+id/iv_close_cc_phone_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:src="@drawable/ic_arrow_down_dark_24dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_enter_cc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_club_card_main"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


<!--                <Button-->
<!--                    android:id="@+id/btn_show_club_card"-->
<!--                    style="@style/WhiteTitle4Bold"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Enter ClubCard/Phone"-->
<!--                    android:layout_marginTop="25dp"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:layout_gravity="center"-->

<!--                    android:layout_marginBottom="20dp"-->
<!--                    android:background="@color/gray"-->
<!--                    android:textSize="15dp"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->

<!--                    />-->
                <TextView
                    android:id="@+id/tv_show_club_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Enter ClubCard/Phone"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textColor="@color/white_two"
                    style="@style/CardView.Dark"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="45dp"
                    android:outlineAmbientShadowColor="@color/greyish"
                    android:src="@drawable/ic_black_chev_right" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <FrameLayout
            android:id="@+id/fl_club_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
             >
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:focusedByDefault="false"
            android:defaultFocusHighlightEnabled="true"
            android:focusableInTouchMode="true"
            android:focusable="false"
            app:hintEnabled="true"
            app:errorEnabled="true"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_retreave_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLength="11"
                android:hint="account number"
                android:focusedByDefault="false"
                android:defaultFocusHighlightEnabled="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:textCursorDrawable="@null"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_submit_recall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="40dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="15dp"
            />
        </FrameLayout>

    </FrameLayout>




<!--    <Button-->
<!--        android:id="@+id/btn_StartNew"-->
<!--        style="@style/WhiteTitle4Bold"-->
<!--        android:visibility="invisible"-->
<!--        android:layout_width="match_parent"-->
