    <androidx.cardview.widget.CardView
        android:id="@+id/cv_guest_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_club_card_main"
        >
        <LinearLayout
            android:id="@+id/ll_guest_checkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


<!--            <Button-->
<!--                android:id="@+id/btn_RecallTransaction"-->
<!--                style="@style/WhiteTitle4Bold"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="20dp"-->
<!--                android:text=" Guest Checkout "-->
<!--                android:textAllCaps="false"-->
<!--                android:background="@drawable/rounded_rect_theme_color"-->
<!--                android:textSize="20dp"-->
<!--                />-->
            <TextView
                android:id="@+id/tv_RecallTransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Guest Checkout"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/white"
                style="@style/CardView.Dark"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_black_chev_right"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:outlineAmbientShadowColor="@color/greyish"
                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>







    <include
        android:id="@+id/loadingLayoutHome"
        android:visibility="gone"
        layout="@layout/loading_layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
